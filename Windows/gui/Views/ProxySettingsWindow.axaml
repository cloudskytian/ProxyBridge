<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProxyBridge.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="550"
        x:Class="ProxyBridge.GUI.Views.ProxySettingsWindow"
        x:DataType="vm:ProxySettingsViewModel"
        x:CompileBindings="True"
        Title="{Binding Loc.ProxySettingsTitle}"
        Icon="/Assets/logo.ico"
        Width="680" Height="420"
        MinWidth="520" MinHeight="300"
        CanResize="True"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FF1E1E1E" Padding="20,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="ðŸ”§" FontSize="22" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Loc.ProxySettingsTitle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#FFE0E0E0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            IsVisible="{Binding !IsEditPanelOpen}">
                    <Button Content="{Binding Loc.ButtonAdd}"
                            Command="{Binding OpenAddPanelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Proxy List View -->
        <Grid IsVisible="{Binding !IsEditPanelOpen}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!-- Test panel at bottom -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Table Header -->
            <Border Grid.Row="0"
                    Background="#FF1E1E1E"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="0,1,0,1"
                    Padding="20,10">
                <Grid ColumnDefinitions="90,*,80,80,90,90,90">
                    <TextBlock Grid.Column="0" Text="Type"   FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                    <TextBlock Grid.Column="1" Text="Host"   FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                    <TextBlock Grid.Column="2" Text="Port"   FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                    <TextBlock Grid.Column="3" Text="Test"   FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                    <TextBlock Grid.Column="4" Text="Edit"   FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                    <TextBlock Grid.Column="5" Text="Delete" FontSize="13" FontWeight="SemiBold" Foreground="#FF999999"/>
                </Grid>
            </Border>

            <!-- Proxy Config Items -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProxyConfigs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ProxyConfig">
                            <Border BorderBrush="#FF3F3F46"
                                    BorderThickness="0,0,0,1"
                                    Padding="20,12">
                                <Grid ColumnDefinitions="90,*,80,80,90,90">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Type}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#FF4EC9B0"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Host}"
                                                   FontSize="14"
                                                   Foreground="#FFE0E0E0"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Port}"
                                               FontSize="13"
                                               Foreground="#FF999999"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="3"
                                            Content="ðŸ”— Test"
                                            Command="{Binding $parent[ItemsControl].((vm:ProxySettingsViewModel)DataContext).OpenTestPanelCommand}"
                                            CommandParameter="{Binding}"
                                            Padding="6,4"
                                            FontSize="12"
                                            Classes="secondary"/>
                                    <Button Grid.Column="4"
                                            Content="âœ Edit"
                                            Command="{Binding $parent[ItemsControl].((vm:ProxySettingsViewModel)DataContext).EditConfigCommand}"
                                            CommandParameter="{Binding}"
                                            Padding="6,4"
                                            FontSize="12"/>
                                    <Button Grid.Column="5"
                                            Content="ðŸ—‘ Del"
                                            Command="{Binding $parent[ItemsControl].((vm:ProxySettingsViewModel)DataContext).DeleteConfigCommand}"
                                            CommandParameter="{Binding}"
                                            Padding="6,4"
                                            FontSize="12"
                                            Classes="secondary"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Test Panel at bottom (shared) -->
            <Border Grid.Row="2"
                    Background="#FF252526"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="0,1,0,0"
                    Padding="20,16"
                    IsVisible="{Binding IsTestViewOpen}">
                <StackPanel Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="{Binding Loc.TestConnectionTitle}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FFE0E0E0"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="âœ•"
                                Classes="secondary"
                                Command="{Binding CloseTestPanelCommand}"
                                Width="32" Height="32" Padding="0"/>
                    </Grid>
                    <Grid ColumnDefinitions="3*,2*,Auto">
                        <TextBox Grid.Column="0" Text="{Binding TestTargetHost}" Watermark="Target host" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding TestTargetPort}" Watermark="Port" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Content="{Binding Loc.StartTestButton}"
                                Command="{Binding StartTestCommand}"
                                IsEnabled="{Binding !IsTesting}"/>
                    </Grid>
                    <Border Background="#FF1E1E1E"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="1"
                            Padding="10"
                            MinHeight="80"
                            MaxHeight="150">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding TestOutput}"
                                       FontFamily="Consolas,monospace"
                                       FontSize="12"
                                       Foreground="#FFE0E0E0"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Add/Edit Form -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      IsVisible="{Binding IsEditPanelOpen}">
            <StackPanel Margin="24,20" Spacing="16">
                <TextBlock Text="{Binding EditPanelTitle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#FFE0E0E0"/>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Loc.ProxyTypeLabel}" Classes="label"/>
                    <ComboBox HorizontalAlignment="Stretch"
                              x:Name="EditTypeComboBox">
                        <ComboBoxItem Content="SOCKS5" Tag="SOCKS5"/>
                        <ComboBoxItem Content="HTTP" Tag="HTTP"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Loc.ProxyIpLabel}" Classes="label"/>
                    <TextBox Text="{Binding NewHost}"
                             Watermark="{Binding Loc.ProxyIpPlaceholder}"/>
                    <TextBlock Text="{Binding HostError}"
                               Classes="error"
                               IsVisible="{Binding HostError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Loc.ProxyPortLabel}" Classes="label"/>
                    <TextBox Text="{Binding NewPort}"
                             Watermark="{Binding Loc.ProxyPortPlaceholder}"/>
                    <TextBlock Text="{Binding PortError}"
                               Classes="error"
                               IsVisible="{Binding PortError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Loc.UsernameLabel}" Classes="label"/>
                    <TextBox Text="{Binding NewUsername}"
                             Watermark="{Binding Loc.UsernamePlaceholder}"/>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Loc.PasswordLabel}" Classes="label"/>
                    <TextBox Text="{Binding NewPassword}"
                             Watermark="{Binding Loc.PasswordPlaceholder}"
                             PasswordChar="â—"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="12"
                            Margin="0,16,0,20">
                    <Button Content="{Binding Loc.ButtonCancel}"
                            Classes="secondary"
                            Command="{Binding CancelEditCommand}"
                            Width="100"/>
                    <Button Content="{Binding Loc.SaveChangesButton}"
                            Command="{Binding SaveConfigCommand}"
                            Width="130"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
